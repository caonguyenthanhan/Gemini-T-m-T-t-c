{
  "manifest_version": 3,
  "name": "Gemini Tóm Tắt & Đọc",
  "version": "2.0",
  "description": "Tóm tắt nội dung trang web bằng Google Gemini API và đọc văn bản.",
  "permissions": [
    "activeTab",
    "scripting",
    "tts",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}